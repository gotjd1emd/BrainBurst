<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="brainburst/tt/util/dbInfo.properties" />
	
	<typeAliases>
		<typeAlias type="brainburst.tt.dto.UserDTO" alias="userDTO"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED"> <!-- POOLED | UNPOOLED -->
				<property name="driver" value="${driverName}" />
				<property name="url" value="${url}" />
				<property name="username" value="${userName}" />
				<property name="password" value="${userPass}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="brainburst/tt/util/Mapper.xml"/>
	</mappers>
</configuration>